<!DOCTYPE html>
<html lang="{{lang}}">
  <head>
    {{!-- Document Settings --}}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    {{!-- Page Meta --}}
    <title>{{page-title}}</title>

    {{!-- Mobile Meta --}}
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{!-- Styles'n'Scripts --}}
    <link rel="stylesheet" type="text/css" href="{{rootpath}}styles/app.min.css" />

  </head>
  <body class="{{body-class}}">

    {{!-- Icons --}}
    <div class="is-hidden">
      {{> icon-sprite}}
    </div>

    {{> header}}

    <main class="main">
      {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
      {{> @partial-block }}
    </main>

    {{!-- The footer at the very bottom --}}
    {{> footer}}


    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{!-- {{ghost_foot}} --}}

    {{!-- Main theme scripts --}}
    <script async src="{{rootpath}}scripts/app.min.js"></script>
  </body>
</html>
