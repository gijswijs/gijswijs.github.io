{{#> default page-title=site-title body-class="home-template"}}

<section class="hero background-img is-large" style="background-image: url('{{rootpath}}{{feature_image}}')">
  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-size-1 has-text-white">
        {{site-title}}
      </h1>
      <h2 class="subtitle has-text-light">
        {{description}}
      </h2>
    </div>
  </div>
</section>

<section class="posts">
  <div class="container">
    {{!-- Latest Posts --}}
    <div class="columns is-multiline">
      {{#each pagination.files }}
        {{#with this}}
        <div class="column is-12-mobile is-6-tablet is-4-widescreen is-6-desktop">
          {{> post-card class="bottom-border"}}
        </div>
        {{/with}}
      {{/each}}
    </div>

    {{> pagination}}
  </div>
</section>
{{/default}}
