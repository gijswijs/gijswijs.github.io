{
  "metadata": {
    "version": "0.1",
    "site_title": "Gijs van Dam",
    "site_description": "privacy, cryptography and programming",
    "social_media": {
      "github": {
        "url": "https://www.github.com/gijswijs",
        "icon": "github",
        "name": "Github",
        "me": "true"
      },
      "linkedin": {
        "url": "https://www.linkedin.com/in/gijsvandam/",
        "icon": "linkedin",
        "name": "LinkedIn",
        "me": "true"
      },
      "researchgate": {
        "url": "https://www.researchgate.net/profile/Gijs_Van_Dam2",
        "icon": "researchgate",
        "name": "ResearchGate",
        "me": "true"
      },
      "mastodon": {
        "url": "https://bitcoinhackers.org/@gijswijs",
        "icon": "mastodon",
        "name": "Mastodon",
        "me": "true"
      },
      "twitter": {
        "url": "https://www.twitter.com/gijswijs",
        "icon": "twitter",
        "name": "Twitter",
        "me": "true"
      },
      "rss": {
        "url": "/rss.xml",
        "icon": "rss",
        "name": "RSS",
        "me": "false",
        "rel": ""
      },
      "keybase": {
        "url": "https://keybase.io/gijsvandam",
        "icon": "keybase",
        "name": "Keybase",
        "me": "true"
      },
      "orcid": {
        "url": "https://orcid.org/0000-0002-6188-6859",
        "icon": "orcid",
        "name": "ORCID",
        "me": "true"
      }
    }
  },
  "source": "_src",
  "destination": "/",
  "clean": true,
  "devClean": false,
  "plugins": [
    { "source-url": true, "dev": true },
    {
      "metalsmith-publish": { "draft": false, "private": false },
      "dev": false
    },
    {
      "metalsmith-collections": {
        "posts": {
          "pattern": "posts/**/*.md",
          "sortBy": "date",
          "reverse": true
        },
        "navigation": {
          "refer": false,
          "sortBy": "sortId"
        }
      }
    },
    {
      "metalsmith-pagination": {
        "collections.posts": {
          "perPage": 3,
          "first": "index.html",
          "path": "page/:num/index.html",
          "layout": "miksa/home.njk",
          "pageMetadata": {
            "title": "Archive",
            "feature_image": "/images/cover.jpg"
          }
        }
      }
    },
    { "metalsmith-markdown": true },
    {
      "metalsmith-more": {
        "key": "excerpt"
      }
    },
    { "metalsmith-permalinks": true },
    {
      "metalsmith-tags": {
        "handle": "tags",
        "path": "topics/:tag/index.html",
        "pathPage": "topics/:tag/:num/index.html",
        "perPage": 6,
        "layout": "/miksa/tag.njk",
        "sortBy": "date",
        "reverse": true,
        "skipMetadata": false,
        "slug": {
          "mode": "rfc3986"
        }
      }
    },
    { "metalsmith-debug": {} },
    { "dump-file": {
      	"filename": "posts/first-post/index.html"
    	}
    },
    {
      "metalsmith-layouts": {
        "directory": "_layouts",
        "pattern": "**",
        "engineOptions": {
          "partials": {
            "default": "_layouts/biron/default.hbs",
            "footer": "_layouts/biron/partials/footer.hbs",
            "header": "_layouts/biron/partials/header.hbs",
            "icon-sprite": "_layouts/biron/partials/icon-sprite.hbs",
            "icon": "_layouts/biron/partials/icon.hbs",
            "navigation": "_layouts/biron/partials/navigation.hbs",
            "social-media": "_layouts/biron/partials/social-media.hbs",
            "post-card": "_layouts/biron/partials/post-card.hbs",
            "pagination": "_layouts/biron/partials/pagination.hbs"
          },
          "helpers": {
            "dateFormat": "handlebarsDateHelper"
          },
          "noCache": true
        }
      }
    },
    {
      "metalsmith-feed": {
        "collection": "posts",
        "site_url": "https://www.gijsvandam.nl",
        "title": "Musings of Gijs van Dam",
        "description": "Posts on privacy, programming and crypto research"
      }
    },
    {
      "metalsmith-mapsite": {
        "hostname": "https://www.gijsvandam.nl",
        "omitIndex": true
      }
    },
    {
      "metalsmith-assets": {
        "source": "_layouts/miksa/assets",
        "destination": "/"
      }
    },
    {
      "metalsmith-assets": {
        "source": "_src/images",
        "destination": "/images"
      }
    },
    { "write-built-url": true, "dev": true },
    {
      "css-change-url": {
        "rootpath": "/"
      }
    },
    {
      "inline-source": true,
      "dev": true
    },
    { "metalsmith-html-minifier": true, "dev": false }
  ]
}
