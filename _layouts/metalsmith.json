{
  "metadata": {
    "version": "0.1",
    "site_title": "Janos",
    "site_description": "A demonstration static site built using Janos SSG",
    "author": {
      "name": "Gijs van Dam",
      "url": "/gijs-van-dam"
    },
    "blog_theme": "light",
    "theme_toggle": false,
    "tag_nav_enabled": true,
    "social_media": {
      "facebook": {
        "url": "https://www.facebook.com",
        "icon": "facebook",
        "name": "Facebook"
      },
      "twitter": {
        "url": "https://www.twitter.com",
        "icon": "twitter",
        "name": "Twitter",
        "handle": "gijswijs"
      },
      "instagram": {
        "url": "https://www.instagram.com",
        "icon": "instagram",
        "name": "Instagram"
      },
      "linkedin": {
        "url": "https://www.linkedin.com",
        "icon": "linkedin",
        "name": "LinkedIn"
      },
      "github": {
        "url": "https://www.github.com/neumannjs",
        "icon": "github",
        "name": "Github"
      },
      "rss": {
        "url": "/rss.xml",
        "icon": "rss",
        "name": "RSS"
      }
    }
  },
  "source": "_src",
  "destination": "/",
  "clean": false,
  "devClean": false,
  "plugins": [
    { "source-url": true, "dev": true },
    {
      "metalsmith-publish": { "draft": false, "private": false },
      "dev": false
    },
    {
      "metalsmith-collections": {
        "posts": {
          "pattern": "posts/**/*.md",
          "sortBy": "date",
          "reverse": true
        },
        "navigation": {
          "refer": false,
          "sortBy": "sortId"
        }
      }
    },
    {
      "metalsmith-pagination": {
        "collections.posts": {
          "perPage": 3,
          "first": "index.html",
          "path": "page/:num/index.html",
          "layout": "chalk/home.njk",
          "pageMetadata": {
            "title": "Archive",
            "feature_image": "/images/cover.jpg"
          }
        }
      }
    },
    { "metalsmith-markdown": true },
    {
      "metalsmith-more": {
        "key": "excerpt"
      }
    },
    { "metalsmith-permalinks": true },
    {
      "metalsmith-tags": {
        "handle": "tags",
        "path": "topics/:tag/index.html",
        "pathPage": "topics/:tag/:num/index.html",
        "perPage": 6,
        "layout": "/chalk/tag.njk",
        "sortBy": "date",
        "reverse": true,
        "skipMetadata": false,
        "slug": {
          "mode": "rfc3986"
        }
      }
    },
    { "metalsmith-debug": {} },
    { "dump-file": {
      	"filename": "posts/first-post/index.html"
    	}
    },
    {
      "metalsmith-layouts": {
        "directory": "_layouts",
        "pattern": "**",
        "engineOptions": {
          "partials": {
            "default": "_layouts/biron/default.hbs",
            "footer": "_layouts/biron/partials/footer.hbs",
            "header": "_layouts/biron/partials/header.hbs",
            "icon-sprite": "_layouts/biron/partials/icon-sprite.hbs",
            "icon": "_layouts/biron/partials/icon.hbs",
            "navigation": "_layouts/biron/partials/navigation.hbs",
            "social-media": "_layouts/biron/partials/social-media.hbs",
            "post-card": "_layouts/biron/partials/post-card.hbs",
            "pagination": "_layouts/biron/partials/pagination.hbs"
          },
          "helpers": {
            "dateFormat": "handlebarsDateHelper"
          },
          "noCache": true
        }
      }
    },
    {
      "metalsmith-feed": {
        "collection": "posts",
        "site_url": "https://gijswijs.github.io",
        "title": "Neumann SSG test",
        "description": "A demonstration static site built using Neumann SSG"
      }
    },
    {
      "metalsmith-mapsite": {
        "hostname": "https://gijswijs.github.io",
        "omitIndex": true
      }
    },
    {
      "metalsmith-assets": {
        "source": "_layouts/chalk/assets",
        "destination": "/"
      }
    },
    {
      "metalsmith-assets": {
        "source": "_src/images",
        "destination": "/images"
      }
    },
    { "write-built-url": true, "dev": true },
    {
      "css-change-url": {
        "rootpath": "/"
      }
    },
    {
      "inline-source": true,
      "dev": true
    },
    { "metalsmith-html-minifier": true, "dev": false }
  ]
}
